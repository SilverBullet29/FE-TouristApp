{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsxImportSource": "react",
    "baseUrl": "./src",
    "paths": {
      "@components": ["components/"],
      "@components/*": ["components/*"],
      "@routes/*": ["routes/*"],
      "@infra/*": ["infra/*"],
      "@provider/*": ["infra/storage/providers"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"],
      "@style/*": ["style/*"],
    },
    "types": ["vite/client"],
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.tsx", "**/*.js", "**/**/*.tsx"],
  "exclude": ["node_modules"],
}
